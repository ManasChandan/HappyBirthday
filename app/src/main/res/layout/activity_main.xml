<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/birthday_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/androidparty"/>

        <TextView
            android:id="@+id/happybirthday_text_view"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:text="HappyBirthday, Cha Cha"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/vidhayak_text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/happybirthday_text_view"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:textSize="30sp"
            android:text="Vidhyak Ji"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/from_text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="30sp"
            android:text="From, Bihari Bhau"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>